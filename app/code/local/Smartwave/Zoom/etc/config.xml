<config>
    <modules>
        <Smartwave_Zoom>
            <version>1.0.0</version>
        </Smartwave_Zoom>
    </modules>
    <frontend>
        <layout>
            <updates>
                <smartwave_zoom module="smartwave_zoom">
                    <file>smartwave_zoom.xml</file>
                </smartwave_zoom>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <smartwave_zoom>
                <class>Smartwave_Zoom_Model</class>
            </smartwave_zoom>
        </models>
        <blocks>
            <smartwave_zoom>
                <class>Smartwave_Zoom_Block</class>
            </smartwave_zoom>
        </blocks>
        <helpers>
            <smartwave_zoom>
                <class>Smartwave_Zoom_Helper</class>
            </smartwave_zoom>
        </helpers>
    </global>
    <default>        
        <zoom>
            <general>
                <enable>1</enable>
                <type>inner</type>
                <scroll_zoom>0</scroll_zoom>
                <easing>1</easing>
                <easing_duration>2000</easing_duration>
            </general>
            <gallery>
                <ga_position>bottom</ga_position>                
            </gallery>
            <lightbox>
                <lb_enable>1</lb_enable>
                <lb_icon_position>rt_bt</lb_icon_position>
            </lightbox>
        </zoom>        
    </default>
</config>