<?php if ($this->getReviewsCount()): ?>
    <div class="ratings">
        <?php if ($this->getRatingSummary()):?>
            <div class="rating-box">
                <div class="rating" style="width:<?php echo $this->getRatingSummary() ?>%"></div>
            </div>
        <?php endif;?>
        <p class="rating-links">
            <a class="pointReviewFormBtn" href="javascript: void(0)"><?php echo $this->__('%d Review(s)', $this->getReviewsCount()) ?></a>
            <span class="separator">|</span>
            <a class="pointReviewFormBtn" href="javascript: void(0)"><?php echo $this->__('Add Your Review') ?></a>
		    
        </p>
    </div>
<?php elseif ($this->getDisplayIfEmpty()): ?>
    <p class="no-rating"><a class="pointReviewFormBtn" href="javascript: void(0)"><?php echo $this->__('Be the first to review this product') ?></a></p>
<?php endif; ?>
<script>
                      jQuery( document ).ready(function() {
                            jQuery( ".pointReviewFormBtn" ).click(function() {
                                jQuery(".product-tabs").children("li").removeClass("active");
                                jQuery(".product-tabs-content").removeClass("active");
                                jQuery(".product-tabs-content").hide();
                                
                                jQuery("#product_tabs_tab_review_list").addClass("active");  
                                
                                jQuery("#product_tabs_tab_review_list_contents").show();
                                jQuery(window).scrollTop(jQuery(".form-add").offset().top);
                            });
                    
                            
                      });
        </script>